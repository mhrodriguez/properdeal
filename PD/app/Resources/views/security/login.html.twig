                        <br/>
                    </div>
                    <div>
                        <form action="{{ path('login') }}" method="post">

                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="text" id="username" name="_username" required = "required"/>
                                    <label for="username">E-mail</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
