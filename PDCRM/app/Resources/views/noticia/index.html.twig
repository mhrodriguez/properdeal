{% extends 'baseabc.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <!-- Page Layout here -->
            <br/>
            <div class="row">
                <nav>
                    <div class="nav-wrapper z-depth-1">
                        <div class="col s12  blue darken-1 ">
                            <a href="#!" class="breadcrumb">Noticias</a>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="row">
                <a href="{{ path('noticia_new', {}) }}" class="waves-effect waves-light btn blue darken-1 right"><i class="material-icons left">add</i>Nueva Noticia</a>
            </div>

            <div class="row">
                <table class="striped">
                    <thead>
                    <tr>
                        <th data-field="id">Titulo</th>
                        <th data-field="price">Opciones</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for noticia in noticias %}
                        <tr>
                            <td>{{ noticia.titulo }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

    <style>
        body {
            background: white;
            height: 100vh;
        }
    </style>

{% endblock %}
