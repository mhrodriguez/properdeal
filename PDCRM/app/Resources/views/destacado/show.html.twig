{% extends 'base.html.twig' %}

{% block body %}
    <h1>Destacado</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destacado.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ destacado.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if destacado.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('destacado_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('destacado_edit', { 'id': destacado.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
